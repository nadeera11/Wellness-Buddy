<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hydration Tracker"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textColor="#1F2937"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Main Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Circular Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <FrameLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp">

                        <!-- Background Circle -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_progress_bg"/>

                        <!-- Progress Circle -->
                        <View
                            android:id="@+id/progressCircle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_progress_blue"/>

                        <!-- Center Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_droplet"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="#1F2937"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 2000 ml"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="#6B7280"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <!-- Add Water Intake Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Water Intake"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="#374151"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <!-- Water Amount Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <Button
                            android:id="@+id/btn50ml"
                            style="@style/WaterIntakeButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="+ 50 ml"/>

                        <Button
                            android:id="@+id/btn100ml"
                            style="@style/WaterIntakeButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="+ 100 ml"/>

                        <Button
                            android:id="@+id/btn200ml"
                            style="@style/WaterIntakeButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="+ 200 ml"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/btn250ml"
                            style="@style/WaterIntakeButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="+ 250 ml"/>

                        <Button
                            android:id="@+id/btn500ml"
                            style="@style/WaterIntakeButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="+ 500 ml"/>
                    </LinearLayout>

                    <!-- Reset Button -->
                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset Today's Progress"
                        android:textColor="#374151"
                        android:backgroundTint="@android:color/transparent"
                        android:strokeColor="#D1D5DB"
                        android:strokeWidth="1"
                        app:cornerRadius="8dp"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginBottom="16dp"/>

                <!-- Reminder Settings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminder Settings"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="#374151"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Daily Target -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Target (ml)"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etDailyTarget"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="number"
                        android:text="2000"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:textColor="#374151"/>
                </LinearLayout>

                <!-- Reminder Interval -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder Interval"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinnerInterval"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"/>
                </LinearLayout>

                <!-- Time Range -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Start Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Time"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="#6B7280"
                            android:layout_marginBottom="4dp"/>

                        <Button
                            android:id="@+id/btnStartTime"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="08:00"
                            android:textColor="#374151"
                            android:backgroundTint="@android:color/transparent"
                            android:strokeColor="#D1D5DB"
                            android:strokeWidth="1"
                            android:gravity="start|center_vertical"
                            app:cornerRadius="6dp"/>
                    </LinearLayout>

                    <!-- End Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Time"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="#6B7280"
                            android:layout_marginBottom="4dp"/>

                        <Button
                            android:id="@+id/btnEndTime"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="22:00"
                            android:textColor="#374151"
                            android:backgroundTint="@android:color/transparent"
                            android:strokeColor="#D1D5DB"
                            android:strokeWidth="1"
                            android:gravity="start|center_vertical"
                            app:cornerRadius="6dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Note -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_background"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Note: This web app can only show reminders when it's open. For real notifications, you would need a native Android app."
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="#92400E"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>



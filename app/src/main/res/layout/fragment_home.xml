<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="24dp"
            android:background="#3E61D7"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wellness Buddy"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/profile_icon_background"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <!-- Header Section -->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Wellness Buddy"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="#1F2937"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your habits, mood, and hydration"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="#6B7280"/>
        </LinearLayout>

        <!-- Today's Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today's Progress"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="#1F2937"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday, Sep 26"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <!-- Progress Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Habits Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_blue_rounded"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Habits"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="#374151"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/tvHabitsPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50%"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="#2563EB"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="completed"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="#6B7280"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>

                        <!-- Progress Bar -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_bg_rounded"
                            android:layout_marginTop="8dp"/>

                        <View
                            android:id="@+id/progressHabitsView"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_blue_rounded"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>

                    <!-- Hydration Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_green_rounded"
                        android:padding="16dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hydration"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="#374151"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/tvHydrationPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="#059669"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="of goal"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="#6B7280"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>

                        <!-- Progress Bar -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_bg_rounded"
                            android:layout_marginTop="8dp"/>

                        <View
                            android:id="@+id/progressHydrationView"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_green_rounded"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Current Mood Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current Mood"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="#1F2937"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/btnAddMoodEntry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âŠ• Add Entry"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="#3B82F6"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <!-- Mood Content -->
                <LinearLayout
                    android:id="@+id/layoutMoodContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCurrentMoodEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ˜«"
                        android:textSize="32sp"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCurrentMoodNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No notes"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="#374151"/>

                        <TextView
                            android:id="@+id/tvCurrentMoodTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23:39"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="#6B7280"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- No Mood Message -->
                <TextView
                    android:id="@+id/tvNoMoodMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No mood entries yet"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="#6B7280"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mood Trends Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mood Trends"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="#1F2937"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/btnViewAllTrends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ˆ View All"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="#3B82F6"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <!-- Chart Container -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/moodTrendChart"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    </LinearLayout>
</ScrollView>


